{
  "name": "thunderbrain",
  "version": "0.0.1",
  "description": "A Platform For Facilitating Good Ideas",
  "main": "index.js",
  "author": "Matt DelSordo, Luis Nova, Alex Kautz, Sharfuz Shifat",
  "license": "MIT",
  "scripts": {
    "start": "yarn prod:build && yarn prod:start",
    "dev:start": "nodemon -e js,jsx --ignore lib --ignore dist --exec babel-node src/server",
    "dev:wds": "webpack-dev-server --progress",
    "prod:build": "rimraf lib dist && babel src -d lib --ignore .test.js && cross-env NODE_ENV=production webpack -p --progress",
    "prod:start": "cross-env NODE_ENV=production pm2 start lib/server && pm2 logs",
    "prod:stop": "pm2 delete server",
    "lint": "eslint src webpack.config.babel.js --ext .js,.jsx",
    "test": "yarn lint && jest --coverage",
    "precommit": "echo committing",
    "prepush": "echo pushing"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-compat": "^2.0.1",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "fetch-mock": "^5.13.1",
    "flow-bin": "^0.57.3",
    "husky": "^0.14.3",
    "jest": "^21.2.1"
  },
  "browserslist": [
    "> 1%"
  ],
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-flow-react-proptypes": "^6.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "bootstrap": "4.0.0-alpha.6",
    "compression": "^1.7.1",
    "connect-mongo": "^2.0.0",
    "cross-env": "^5.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "immutable": "4.0.0-rc.2",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.2.1",
    "mongoose": "^4.12.6",
    "nodemon": "^1.12.1",
    "pm2": "^2.7.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "next",
    "react-pdf": "^2.1.7",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "tether": "^1.4.0",
    "twilio": "^3.9.2",
    "twilio-video": "^1.6.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3"
  }
}
